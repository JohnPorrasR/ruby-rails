<%- model_name = @image.class.model_name.human %>

<h1><%= t('.title', model: model_name) %></h1>

<%= form_for @image,html: {class: 'pure-form pure-form-aligned'}, builder: CustomFormBuilder do |form| %>
    <%= form.form_error %>

    <div class="pure-control-group">
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>
    <%= form.field_error :name %>

    <div class="pure-control-group">
      <%= form.label :description %>
      <%= form.text_area :description %>
    </div>
    <div class="pure-control-group">
      <%= form.label :category %>
      <%= form.collection_select :category, image_caterories, :last, :first %>
    </div>
    <div class="pure-control-group">
      <%= form.label :tags %>
      <%= form.text_field :tags %>
    </div>
    <div class="pure-control-group">
      <%= form.label :photo %>
      <%= form.file_field :photo %>
    </div>
    <div class="pure-control">
      <%= form.submit class: 'pure-button pure-button-primary'%>
    </div>
<% end %>




















